<div class="row">
  <div class="col-md-6 demo">
    <h3>Default modals:</h3>
    {{#bs-button class="alert-modal" onClick=(action "showAlertModal")}}Alert Modal{{/bs-button}}
    {{#bs-button class="confirm-modal" onClick=(action "showConfirmModal")}}Confirm Modal{{/bs-button}}
    {{#bs-button class="prompt-modal" onClick=(action "showPromptModal")}}Prompt Modal{{/bs-button}}
    {{#bs-button class="prompt-confirm-modal" onClick=(action "showPromptConfirmModal")}}Prompt Confirm Modal{{/bs-button}}
    {{#bs-button class="check-confirm-modal" onClick=(action "showCheckConfirmModal")}}Check Confirm Modal{{/bs-button}}
    {{#bs-button class="progress-modal" onClick=(action "showProgressModal")}}Progress Modal{{/bs-button}}
    {{#bs-button class="process-modal" onClick=(action "showProcessModal")}}Process Modal{{/bs-button}}

    <h3>Modals with custom components:</h3>
    {{#bs-button class="custom-alert-modal" onClick=(action "showCustomAlertModal")}}Alert Modal{{/bs-button}}
    {{#bs-button class="custom-confirm-modal" onClick=(action "showCustomConfirmModal")}}Confirm Modal{{/bs-button}}
    {{#bs-button class="custom-prompt-modal" onClick=(action "showCustomPromptModal")}}Prompt Modal{{/bs-button}}
    {{#bs-button class="custom-prompt-confirm-modal" onClick=(action "showCustomPromptConfirmModal")}}Prompt Confirm Modal{{/bs-button}}
    {{#bs-button class="custom-check-confirm-modal" onClick=(action "showCustomCheckConfirmModal")}}Check Confirm Modal{{/bs-button}}
    {{#bs-button class="custom-progress-modal" onClick=(action "showCustomProgressModal")}}Progress Modal{{/bs-button}}
    {{#bs-button class="custom-process-modal" onClick=(action "showCustomProcessModal")}}Process Modal{{/bs-button}}
    <h3>Settings:</h3>
    {{#bs-form formLayout="vertical" model=this as |form|}}
      <h4>Prompt:</h4>
      {{form.element controlType="checkbox" class="disallow-empty" label="Disallow empty prompt" property="disallowEmptyPrompt"}}
      <h4>Progress:</h4>
      <div class="row">
        <div class="col-md-6">
          {{form.element controlType="checkbox" class="progress-show-label" label="Show label in the progress bar" property="showLabel"}}
          {{#form.element controlType="power-select" options=typeChoices property="type" as |el|}}
            {{el.control searchEnabled=false}}
          {{/form.element}}
        </div>
        <div class="col-md-6">
          {{form.element controlType="checkbox" class="progress-striped" label="Progress bar is striped" property="striped"}}
          {{form.element controlType="checkbox" class="progress-animate" disabled=notStriped label="Progress bar is animated" property="animate"}}
          {{form.element controlType="checkbox" class="progress-will-fail" label="Progress will fail" property="progressWillFail"}}
        </div>
      </div>
      <h4>Process</h4>
      {{form.element controlType="checkbox" class="process-will-fail" label="Process will fail" property="processWillFail"}}
    {{/bs-form}}
    {{outlet}}
  </div>
  <div class="col-md-6">
    <p>Last Modal Options:</p>
    <pre>{{stringifiedOptions}}</pre>
    <p>Logs:</p>
    <p class="logs">{{#each messages as |message|}}{{message}}<br>{{/each}}</p>
    {{#bs-button onClick=(action "cleanMessage")}}Clear logs{{/bs-button}}
  </div>
</div>